<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:stretchColumns="*"
             android:background="#a7a5a5"
             android:paddingBottom="0dip"
             android:paddingLeft="0dip"
             android:paddingRight="0dip"
             android:paddingTop="2dip">

    <TableRow
        android:id="@+id/tableRow1"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:padding="0dip">

        <Button
            android:id="@+id/key_1"
            style="@style/key.gray"
            android:text="1"/>

        <Button
            android:id="@+id/key_2"
            style="@style/key.gray"
            android:text="2"/>

        <Button
            android:id="@+id/key_3"
            style="@style/key.gray"
            android:text="3"/>

        <ImageButton
            android:id="@+id/key_backspace"
            android:src="@drawable/ic_backspace"
            style="@style/key.red"
            android:text="Back"/>

        <Button
            android:id="@+id/key_clear"
            style="@style/key.red"
            android:text="C"/>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="0dip">

        <Button
            android:id="@+id/key_4"
            style="@style/key.gray"
            android:text="4"/>

        <Button
            android:id="@+id/key_5"
            style="@style/key.gray"
            android:text="5"/>

        <Button
            android:id="@+id/key_6"
            style="@style/key.gray"
            android:text="6"/>

        <Button
            android:id="@+id/key_plus_1"
            style="@style/key.black"
            android:text="+1"/>

        <Button
            android:id="@+id/key_plus_10"
            style="@style/key.black"
            android:text="+10"/>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="0dip">

        <Button
            android:id="@+id/key_7"
            style="@style/key.gray"
            android:text="7"/>

        <Button
            android:id="@+id/key_8"
            style="@style/key.gray"
            android:text="8"/>

        <Button
            android:id="@+id/key_9"
            style="@style/key.gray"
            android:text="9"/>

        <Button
            android:id="@+id/key_minus_1"
            style="@style/key.black"
            android:text="-1"/>

        <Button
            android:id="@+id/key_minus_10"
            style="@style/key.black"
            android:text="-10"/>


    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="0dip">

        <Button
            android:id="@+id/key_posneg"
            style="@style/key.black"
            android:text="+/-"
            />

        <Button
            android:id="@+id/key_0"
            style="@style/key.gray"
            android:text="0"/>

        <Button
            android:id="@+id/key_save"
            style="@style/key.green"
            android:layout_span="3"
            android:text="Save Round"/>
    </TableRow>


</TableLayout>